print('---Wpitaj w prostym programie ToDoList!---')

ToDoList = []
priorytetList = []
priorytet = '!!'
exit = True

while exit:
    
    task = input('\nCo masz do zrobienia?\n')
    priorytet = input('\nCzy %s ma wysoki priorytet? !! - tak: ' % (task))
    
    if priorytet == '!!':
        print('Zadanie', task, 'zostało dodane do listy priorytetów.')
        priorytetList.append(task)
    else:
        print('Zadanie', task, 'zostało dodane do zwykłej listy.')
        ToDoList.append(task)
    
    
    
    
    print('\nAktualna lista zwykłych zadań', ToDoList)
    print('Aktualna lista zadań priorytetowych', priorytetList)
